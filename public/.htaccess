# URL Rewriting for Clean URLs
RewriteEngine On

# Prevent access to sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Prevent access to source code and data files
<FilesMatch "\.(php|json|log)$">
    <RequireAll>
        Require all granted
    </RequireAll>
</FilesMatch>

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "DENY"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://maps.googleapis.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://maps.googleapis.com;"
</IfModule>

# Prevent directory listing
Options -Indexes

# Handle errors
ErrorDocument 404 /index.php?route=404
ErrorDocument 403 /index.php?route=403
ErrorDocument 500 /index.php?route=500

# Rewrite rules for clean URLs
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?route=$1 [QSA,L]

# Cache static assets
<IfModule mod_expires.c>
    ExpiresActive on
    
    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    
    # Images
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    
    # Fonts
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # HTML
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# File upload limits
php_value upload_max_filesize 5M
php_value post_max_size 6M
php_value max_execution_time 300
php_value memory_limit 256M

# Session security
php_value session.cookie_httponly 1
php_value session.cookie_secure 0
php_value session.use_strict_mode 1
php_value session.cookie_samesite "Lax"

# Error reporting (disable in production)
php_flag display_errors Off
php_flag log_errors On
php_value error_log /dev/null

# Prevent access to configuration files
<Files "*.config">
    Order allow,deny
    Deny from all
</Files>

# Prevent access to backup files
<Files "*.backup.*">
    Order allow,deny
    Deny from all
</Files>

# Prevent access to temporary files
<Files "*.tmp">
    Order allow,deny
    Deny from all
</Files>

# Allow access to specific file types
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|webp|svg|woff|woff2|ttf|eot)$">
    Require all granted
</FilesMatch>

# Block access to hidden files and directories
<IfModule mod_rewrite.c>
    RewriteCond %{SCRIPT_FILENAME} -d [OR]
    RewriteCond %{SCRIPT_FILENAME} -f
    RewriteRule "(^\.|/\.)" - [F]
</IfModule>

# Prevent access to system files
<FilesMatch "^(\.htaccess|\.htpasswd|\.git|\.env|composer\.json|composer\.lock|package\.json|package-lock\.json|yarn\.lock|README\.md|LICENSE)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Rate limiting (if mod_ratelimit is available)
<IfModule mod_ratelimit.c>
    SetOutputFilter RATE_LIMIT
    SetEnv rate-limit 400
</IfModule>

# Prevent hotlinking
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^http(s)?://(www\.)?yourdomain.com [NC]
    RewriteCond %{HTTP_REFERER} !^http(s)?://(www\.)?google.com [NC]
    RewriteCond %{HTTP_REFERER} !^http(s)?://(www\.)?bing.com [NC]
    RewriteCond %{HTTP_REFERER} !^http(s)?://(www\.)?yahoo.com [NC]
    RewriteRule \.(jpg|jpeg|png|gif|webp)$ - [F]
</IfModule>

# Security for specific directories
<Directory "/uploads">
    Options -Indexes
    Require all granted
    
    # Allow only image files
    <FilesMatch "\.(jpg|jpeg|png|gif|webp)$">
        Require all granted
    </FilesMatch>
    
    # Deny access to other file types
    <FilesMatch "\.(php|js|html|htm|txt|log|sql|zip|rar|tar|gz)$">
        Require all denied
    </FilesMatch>
</Directory>

# Prevent access to data directory
<Directory "/data">
    Require all denied
</Directory>

# Prevent access to source directory
<Directory "/src">
    Require all denied
</Directory>

# Prevent access to workspace directory
<Directory "/workspace">
    Require all denied
</Directory>

# Custom error pages
ErrorDocument 400 /index.php?route=error&code=400
ErrorDocument 401 /index.php?route=error&code=401
ErrorDocument 403 /index.php?route=error&code=403
ErrorDocument 404 /index.php?route=error&code=404
ErrorDocument 500 /index.php?route=error&code=500
ErrorDocument 503 /index.php?route=error&code=503